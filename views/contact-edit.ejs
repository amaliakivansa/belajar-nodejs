<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h2>Ubah Kontak</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact/update">
        <div class="mb-3">
          <input
            type="hidden"
            class="form-control"
            id="oldNama"
            name="oldNama"
            value="<%= contact.nama %>"
          />
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
            value="<%= contact.oldNama || contact.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value="<%= contact.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="noHP" class="form-label">No HP</label>
          <input
            type="number"
            class="form-control"
            id="noHP"
            name="noHP"
            required
            value="<%= contact.noHP %>"
          />
        </div>

        <button type="submit" class="btn btn-primary">Ubah Data Kontak</button>
      </form>
    </div>
  </div>
</div>
