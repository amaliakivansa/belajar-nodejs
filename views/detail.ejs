<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Kontak</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        Data Kontak Tidak Tersedia.
        <a href="/contact" class="alert-link">Kembali ke halaman kontak</a>.
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <p class="card-text text-muted">No HP: <%= contact.noHP %></p>
          <a
            href="/contact/edit/<%= contact.nama %>"
            class="badge bg-info text-light"
            >ubah</a
          >
          <a
            href="/contact/delete/<%= contact.nama %>"
            class="badge bg-danger text-light"
            onclick="confirm('Apakah Anda yakin ingin menghapus kontak ini?')"
            >hapus</a
          >
          <a href="/contact" class="card-link d-block mt-3"
            ><i class="bi bi-chevron-double-left"></i> Kembali ke halaman
            kontak</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
